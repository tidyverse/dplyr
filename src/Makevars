# Disable long types from C99 or CPP11 extensions
PKG_CPPFLAGS = -Iinst/include -DCOMPILING_DPLYR -DBOOST_NO_INT64_T -DBOOST_NO_INTEGRAL_INT64_T -DBOOST_NO_LONG_LONG

all: $(SHLIB)

# This file exists only for R CMD INSTALL, is created as empty file
# for building from source archive
Makevars.local:
	touch "$@"
include Makevars.local

shlib-clean: remove-dep-files

remove-dep-files:
	rm -f *.d
